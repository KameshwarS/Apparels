<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/blury_background"
        android:scaleType="centerCrop"
        />
    
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tvAppName"
            style="@style/h3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="120dp"
            android:drawableStart="@drawable/ic_apparels_shape"
            android:drawablePadding="6dp"
            android:text="Apparels.ai"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <TextView
            android:id="@+id/tvRightAddressForShopping"
            android:text="The Right Address For Shopping Anyday"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            style="@style/h4"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:layout_marginTop="52dp"
            app:layout_constraintTop_toBottomOf="@id/tvAppName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textAlignment="center"
            android:gravity="center"
            android:textSize="35sp"

            />

        <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:id="@+id/tvQuality"
            style="@style/h2"
            app:layout_constraintStart_toStartOf="@id/tvRightAddressForShopping"
            app:layout_constraintEnd_toEndOf="@id/tvRightAddressForShopping"
            app:layout_constraintTop_toBottomOf="@id/tvRightAddressForShopping"
            android:textAlignment="center"
            android:gravity="center"
            android:text="It is now very easy to reach the best quality among all"
            android:textColor="@color/black"
            android:layout_margin="25dp"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/RegisterbtnAO"
            android:layout_width="200dp"
            android:layout_height="55dp"
            style="@style/blueButtonStyle"
            android:text="Register"
            app:layout_constraintTop_toTopOf="@id/tvQuality"
            app:layout_constraintEnd_toEndOf="@id/tvQuality"
            app:layout_constraintStart_toStartOf="@id/tvQuality"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/login_button_AO"
            android:layout_width="200dp"
            android:layout_height="55dp"
            style="@style/whiteButtonStyle"
            android:text="Login"
            app:layout_constraintTop_toBottomOf="@id/RegisterbtnAO"
            app:layout_constraintEnd_toEndOf="@id/tvQuality"
            app:layout_constraintStart_toStartOf="@id/tvQuality"
            android:layout_marginTop="20dp"
            />




    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>